		"formsnap": "^1.0.1",
		"globals": "^15.0.0",
		"json-ast-comments": "^1.1.1",
		"lucide-svelte": "^0.437.0",
		"mode-watcher": "^0.4.1",
		"msw": "^2.4.9",
